@model GestaoDeTurmas.WEB.Models.CadastroAlunoModel
<div class="mt-3">
    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Colse">X</button>
            @TempData["MensagemSucesso"]
        </div>
    }

    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Colse">X</button>
            @TempData["MensagemErro"]
        </div>
    }
</div>
<div class="container">
    <form asp-action="Cadastrar" asp-controller="CadastroAluno" method="post">
        <h1 class="row justify-content-center">Cadastro de alunos</h1>
        <div class="row justify-content-center mt-5">
            <div class="form-group col-md-3">
                <label class="col-form-label">Nome</label>
                <input asp-for="@Model.Nome" class="form-control" placeholder="Digite o nome do aluno" required />
            </div>
            <div class="form-group col-md-3">
                <label class="col-form-label">Usuário</label>
                <input asp-for="@Model.Usuario" class="form-control" placeholder="Digite o usuário do aluno" required />
            </div>
            <div class="form-group col-md-3">
                <label class="col-form-label">Senha</label>
                <input asp-for="Senha" class="form-control" type="password" placeholder="digite a senha do aluno" required />
            </div>
            <div class="form-group col-md-3">
                <label class="col-form-label">Confirmar a senha</label>
                <input asp-for="@Model.ConfirmarSenha" type="password" class="form-control" placeholder="confirme a senha do aluno" required>
            </div>
        </div>
        <div class="row justify-content-start mt-2">
            <div class="form-group col-md-3">
                <button asp-controller="CadastroAluno" asp-action="Cadastrar" type="submit" class="btn btn-success">Salvar</button>
            </div>
        </div>
    </form>
</div>

<div class="table-responsive">
    <table class="table table-striped" id="tabelaCadastroAluno">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Usuário</th>
                <th>Ativo</th>
                <th>Editar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Alunos)
            {
                <tr>
                    <td>@item.Nome</td>
                    <td>@item.Usuario</td>
                    <td><i class="fa @(item.Ativo? "fa-check text-success" : "fa-times text-danger")"></i></td>
                    <td>
                        <a asp-controller="CadastroAluno" asp-action="Editar" asp-route-Id="@item.Id">
                            <i class="fa fa-edit"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section scripts{

}