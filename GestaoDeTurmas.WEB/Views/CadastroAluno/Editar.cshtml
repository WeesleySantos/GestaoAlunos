@model GestaoDeTurmas.WEB.Models.CadastroAlunoModel
<div class="container">
    <form asp-action="Atualizar" asp-controller="CadastroAluno" method="post">
        <input type="hidden" asp-for="@Model.AlunoPorId.Id"/>
        <h1 class="row justify-content-center">Editar alunos</h1>
        <div class="row justify-content-center mt-5">
            <div class="form-group col-md-3">
                <label class="col-form-label">Nome</label>
                <input asp-for="@Model.AlunoPorId.Nome" class="form-control" required/>
            </div>
            <div class="form-group col-md-3">
                <label class="col-form-label">Usuário</label>
                <input asp-for="@Model.AlunoPorId.Usuario" class="form-control" required />
            </div>
            <div class="form-check form-switch col-md-3 mt-5">
                <input asp-for="@Model.AlunoPorId.Ativo" type="checkbox" class="form-check-input" id="switchAtivo">
                <label class="custom-control-label" for="switchAtivo">Inativar Aluno</label>
            </div>
            <div class="form-group col-md-3" style="margin-top: 37px;">
                <button asp-controller="CadastroAluno" asp-action="Atualizar" type="submit" class="btn btn-success">Atualizar</button>
                <a asp-controller="CadastroAluno" asp-action="Index" class="btn btn-secondary">Fechar</a>
            </div>
        </div>
    </form>
</div>