@model GestaoDeTurmas.WEB.Models.CadastroTurmaModel
<div class="container">
    <form asp-action="Atualizar" asp-controller="CadastroTurma" method="post">
        <input type="hidden" asp-for="@Model.TurmaPorId.Id" />
        <h1 class="row justify-content-center">Cadastro de alunos</h1>
        <div class="row justify-content-center mt-5">
            <div class="form-group col-md-3">
                <label class="col-form-label">Nome</label>
                <input asp-for="@Model.TurmaPorId.Turma" class="form-control" required/>
            </div>
            <div class="form-group col-md-3">
                <label class="col-form-label">Ano</label>
                <input asp-for="@Model.TurmaPorId.Ano" class="form-control" required/>
            </div>
            <div class="form-check form-switch col-md-3 mt-5">
                <input asp-for="@Model.TurmaPorId.Ativo" type="checkbox" class="form-check-input" id="switchAtivo">
                <label class="custom-control-label" for="switchAtivo">Inativar Turma</label>
            </div>
            <div class="form-group col-md-3" style="margin-top: 37px;">
                <button asp-controller="CadastroTurma" asp-action="Atualizar" type="submit" class="btn btn-success">Atualizar</button>
                <a asp-controller="CadastroTurma" asp-action="Index" class="btn btn-secondary">Fechar</a>
            </div>
        </div>
    </form>
</div>