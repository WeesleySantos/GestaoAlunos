@model GestaoDeTurmas.WEB.Models.CadastroTurmaAlunoModel

<div class="mt-3">
    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Colse">X</button>
            @TempData["MensagemSucesso"]
        </div>
    }

    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Colse">X</button>
            @TempData["MensagemErro"]
        </div>
    }
</div>

<div class="container">
    <form asp-action="Editar" asp-controller="CadastroTurmaAluno" method="post">
        <input type="hidden" asp-for="@Model.TurmaAlunoPorId.Aluno_Id" />
        <input type="hidden" asp-for="@Model.TurmaAlunoPorId.Turma_Id" />

        <h1 class="row justify-content-center">Relaçao Aluno e turma</h1>
        <div class="row justify-content-center mt-5">
            <div class="form-group col-md-3">
                <label class="col-form-label">Aluno</label>
                <select asp-for="@Model.TurmaAlunoPorId.Aluno_Id" asp-items="@(new SelectList(Model.Alunos, "Id","Nome"))" class="form-select" disabled>
                    <option value="">Selecione</option>
                </select>
            </div>
            <div class="form-group col-md-3">
                <label class="col-form-label">Turma</label>
                <select asp-for="@Model.TurmaAlunoPorId.Turma_Id" asp-items="@(new SelectList(Model.Turmas, "Id","Turma"))" class="form-select" required>
                    <option value="">Selecione</option>
                </select>
            </div>
            <div class="form-group col-md-3" style="margin-top: 37px;">
                <button asp-controller="CadastroTurmaAluno" asp-action="Atualizar" type="submit" class="btn btn-success">Salvar</button>
            </div>
        </div>
    </form>
</div>
